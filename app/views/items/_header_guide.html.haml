%header.mercari-header
  .mercari-top
    .topmein-search-band

      .topmein-mercari
        = link_to root_path ,class: "topmein-mercari__box" do
          = image_tag("/logo.svg",alt: "Mercari",class:"topmein-mercari__box__icon")


      = form_with url: root_path, class: 'topmein-search-form' do |f|
        = f.search_field :keyword, {name: "keyword", class: "topmein-search-form__write", placeholder: '何かお探しですか？', value: ""}
        = f.button "", class: "topmein-search-form__button" do
          %svg.topmein-search-form__button__icon{"aria-hidden": "true", height: "16", viewbox: "0 0 16 16", width: "16"}
            %path{d: "M11.435 10.063h-.723l-.256-.247a5.92 5.92 0 0 0 1.437-3.87 5.946 5.946 0 1 0-5.947 5.947 5.92 5.92 0 0 0 3.87-1.437l.247.256v.723L14.637 16 16 14.637l-4.565-4.574zm-5.489 0A4.111 4.111 0 0 1 1.83 5.946 4.111 4.111 0 0 1 5.946 1.83a4.111 4.111 0 0 1 4.117 4.116 4.111 4.111 0 0 1-4.117 4.117z", fill: "currentColor", "fill-rule": "nonzero"}

    .topmein-select-band
      .topmein-select-band__left
        %ul.topmein-select-band__left__category.ddmenu
          %li
            =link_to categories_path, class: "topmein-select-band__left__category__tag" do
              %svg.topmein-select-band__left__category__tag__search{"aria-hidden": "true", height: "16", viewbox: "0 0 20 16", width: "20"}
                %path{d: "M18.799 15.25h-11.5a1.25 1.25 0 1 1 0-2.5h11.5a1.25 1.25 0 0 1 0 2.5zm0-6h-11.5a1.25 1.25 0 1 1 0-2.5h11.5a1.25 1.25 0 0 1 0 2.5zm0-6h-11.5a1.25 1.25 0 1 1 0-2.5h11.5a1.25 1.25 0 0 1 0 2.5zM2 16a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm0-6a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm0-6a2 2 0 1 0 0-4 2 2 0 0 0 0 4z", fill: "currentColor", "fill-rule": "nonzero"}
              カテゴリーから探す
            %ul.ddmenu--top-level
              - ddmenu_list(Category.roots)

        .topmein-select-band__left__category
          = link_to root_path , class: "topmein-select-band__left__category__tag" do
            %svg.topmein-select-band__left__category__tag__bland{"aria-hidden": "true", height: "16", viewbox: "0 0 23 16", width: "23"}>
              %path{d: "M6.315 0L4.473 1.806 2.833.019.73 1.977l1.69 1.84L1.198 5.02c-1.594 1.594-1.594 4.188-.01 5.772L6.3 16h13.272a3.08 3.08 0 0 0 3.077-3.077V3.076A3.08 3.08 0 0 0 19.57 0H6.315zm13.46 12.925a.211.211 0 0 1-.205.205H7.504L3.227 8.771a1.226 1.226 0 0 1-.01-1.71L4.38 5.92l1.28 1.371a2.68 2.68 0 1 0 2.13-1.93L6.433 3.907 7.49 2.87h12.082a.211.211 0 0 1 .206.205v9.848h-.002z", fill: "currentColor", "fill-rule": "nonzero"}
            ブランドから探す


      %ul.topmein-select-band__right
        - if user_signed_in?
          %li.topmein-select-band__right__command
            = link_to root_path , class: "topmein-select-band__right__command__box" do
              %svg.topmein-select-band__right__command__box__menu{"aria-hidden": "true", height: "16", viewbox: "0 0 14 16", width: "14"}
                %path{d: "M6.592 16c.89 0 1.632-.734 1.632-1.632H4.928c0 .898.742 1.632 1.664 1.632zm4.896-4.928V6.976c-.008-2.521-1.345-4.63-3.712-5.184v-.576C7.79.55 7.241 0 6.56 0c-.68 0-1.23.55-1.216 1.216v.576c-2.36.554-3.704 2.654-3.712 5.184v4.096L0 12.704v.832h13.12v-.832l-1.632-1.632zm-1.632.832h-6.56V6.976c0-2.024 1.238-3.68 3.296-3.68 2.026 0 3.264 1.656 3.264 3.68v4.928z", fill: "currentColor", "fill-rule": "nonzero"}
              お知らせ
              %span.topmein-select-band__right__command__box__icon
                1
          %li.topmein-select-band__right__command
            = link_to root_path , class: "topmein-select-band__right__command__box" do
              %svg.topmein-select-band__right__command__box__mark{"aria-hidden": "true", height: "16", viewbox: "0 0 21 16", width: "21"}
                %path{d: "M6.682 12.657L1.67 7.642 0 9.313 6.682 16 21 1.672 19.33 0z", fill: "currentColor", "fill-rule": "nonzero"}
              やることリスト
              %span.topmein-select-band__right__command__box__icon
                4
          %ul.topmein-select-band__right__command.ddmenu__mypage
            %li
              = link_to current_user , class: "topmein-select-band__right__command__box" do
                = image_tag("/sample-avatar.jpg", alt: "", class: "topmein-select-band__right__command__box__mypage")
                マイページ
              %ul
                %li.mypage__list__top
                  .mypage__list__top__background
                    = image_tag "/sample-avatar.jpg", height: '60', width: '60'
                  .mypage__list__top__username
                    %span=current_user.full_name
                  .mypage__list__top__userinfo
                    %span="評価: #{current_user.user_reviews.count}"
                    %span="出品数: #{current_user.items.count}"

                %li
                  = link_to current_user do
                    %span="いいね!一覧"
                    %i.icon-arrow-right
                %li
                  =link_to listing_user_path(current_user) do
                    %span="出品した商品 - 出品中"
                    %i.icon-arrow-right
                %li
                  =link_to in_progress_user_path(current_user) do
                    %span="出品した商品 - 取引中"
                    %i.icon-arrow-right
                %li
                  =link_to completed_user_path(current_user) do
                    %span="出品した商品 - 売却済み"
                    %i.icon-arrow-right
                %li
                  =link_to current_user do
                    %span="購入した商品 - 取引中"
                    %i.icon-arrow-right
                %li
                  =link_to current_user do
                    %span="購入した商品 - 過去の取引"
                    %i.icon-arrow-right

        - else
          %li.topmein-select-band__right__command__box--new
            = link_to "新規会員登録", sign_up_top_path
          %li.topmein-select-band__right__command__box--login
            = link_to "ログイン", sign_in_path


