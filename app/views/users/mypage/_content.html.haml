.content
  %section.user-icon
    = link_to root_path do
      %figure
        = image_tag "/sample-avatar.jpg", height: '60', width: '60'
      %h2.bold
        = @user.nickname
      .user-icon__number
        %div
          評価
          %span.bold
            = @user.user_reviews.length
        %div
          出品数
          %span.bold
            = @user.items.length

  %section.tab-container-notification-todo
    %ul.tabs
      %li#notification_tab
        %h3.bold
          %p{data: {toggle: "tab"}}
            お知らせ
            %span.tabs__nav-number.hidden-large
              2
      %li#todo_tab
        %h3.bold
          %p{data: {toggle: "tab"}}
            やることリスト
    .tab-content
      %ul#notification_content.tab-content__items.tab-pane
